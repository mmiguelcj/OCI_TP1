end 

// pin_name2
initial
begin
	pin_name2 = 1'b0;
	pin_name2 = #220000 1'b1;
	pin_name2 = #280000 1'b0;
end 

// pin_name3
initial
begin
	pin_name3 = 1'b1;
	pin_name3 = #340000 1'b0;
	pin_name3 = #60000 1'b1;
end 

// pin_name4
initial
begin
	pin_name4 = 1'b0;
	pin_name4 = #200000 1'b1;
	pin_name4 = #200000 1'b0;
	pin_name4 = #340000 1'b1;
	pin_name4 = #180000 1'b0;
end 

KronosX_vlg_sample_tst tb_sample (
	.pin_name1(pin_name1),
	.pin_name2(pin_name2),
	.pin_name3(pin_name3),
	.pin_name4(pin_name4),
	.sampler_tx(sampler)
