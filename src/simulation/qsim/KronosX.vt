reg pin_name2;
reg pin_name3;
reg pin_name4;
// wires                                               
wire pin_name5;

wire sampler;                             

// assign statements (if any)                          
KronosX i1 (
// port map - connection between master ports and signals/registers   
	.pin_name1(pin_name1),
	.pin_name2(pin_name2),
	.pin_name3(pin_name3),
	.pin_name4(pin_name4),
	.pin_name5(pin_name5)
);

// pin_name1
initial
begin
	pin_name1 = 1'b1;
	pin_name1 = #280000 1'b0;
